{
  "system": {
    "timezone":"America/Los_Angeles"
  },
  "authorization": {
    "sudo": {
      "groups": [ "vagrant" ],
      "users": [ "vagrant" ],
      "passwordless":"true",
      "include_sudoers_d":"true"
    }
  },
  "collectd" : {
    "servers": [ "some_sketchy.host" ], 
    "hostname": "foobar",
    "fqdn_lookup": "false"
  },
  "run_list": [ "recipe[system]", "recipe[rightscale]", "recipe[ntp]", "recipe[resolver]", "recipe[cron]", "recipe[sudo]", "recipe[python]", "recipe[ruby]", "recipe[rubygems]" ]
}